{
  "compilerOptions": {
     "target": "es6",
     "module": "commonjs",
     "declaration": true,
     "declarationMap": true,
     "sourceMap": true,
     "outDir": "./lib",
     "removeComments": false,
     "strict": true,
     "noImplicitAny": false,
     "noImplicitThis": true,
     "alwaysStrict": true,
     "esModuleInterop": true,
      "resolveJsonModule": true
  },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
